<h1>Job Dashboard</h1>

<table class="table job-summary-table table-hover">
  <thead>
    <tr>
      <th>Company Name</th>
      <th>Job Title</th>
      <th>Job Post Url</th>
      <th>Job Deadline</th>
      <th>View Record</th>
    </tr>
  </thead>
  <tbody>
    {{#each jobs as |job|}}
    <tr>
      <td class="display-company-name">
        {{job.company_name}}
      </td>
      <td class="display-job-title">
        {{job.title}}
      </td>
      <td class="display-job-post-url">
        <a href="{{job.post_url}}" target="_blank">{{job.post_url}}</a>
      </td>
      <td class="display-job-deadline">
        {{job.deadline}}
      </td>
      <td>
        <button type="button" class="btn btn-info btn-sm dashboard-job-record-btn" data-current-job-id="{{job.id}}">View Job </button>
        <!-- <button class="btn btn-primary dashboard-job-record-btn" type="button" class="btn btn-info btn-sm current" data-current-job-id="{{job.id}}" data-current-company-id="{{job.company_id}}">View Job</button> -->
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
<br><br>
<div class="dashboard-container">
  <button id="dashboard-new-job-btn" type="button" class="btn btn-success">Create Job</button>
</div>
