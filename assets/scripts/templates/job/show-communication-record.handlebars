<h1>Communication Overview</h1>

<h2 class="communication-name-header" data-current-communication-name="{{communication.id}}">{{communication.full_name}}</h2>

<h3>Communication Details</h3>
<table class="table job-record-table table-hover">
  <tbody>
    <tr>
      <td class="job-record-title job-record-school">
        Deadline:
      </td>
      <td class="display-job-school">
        {{job.deadline}}
      </td>
    </tr>
    <tr>
      <td class="job-record-title job-record-school">
        Salary:
      </td>
      <td class="display-job-school">
        {{job.salary}}
      </td>
    </tr>
    <tr>
      <td class="job-record-title job-record-teacher">
        Job Responsibilities
      </td>
      <td class="display-job-teacher">
        {{job.responsibilities}}
      </td>
    </tr>
    <tr>
      <td class="job-record-title job-record-grade">
        Job Requirements:
      </td>
      <td class="display-job-grade">
        {{job.requirement}}
      </td>
    </tr>
    <tr>
      <td class="job-record-title job-record-grade">
        Job Comments:
      </td>
      <td class="display-job-grade">
        {{job.comment}}
      </td>
    </tr>
  </tbody>
</table>

<div class="dashboard-communication-btn-container">
  <div class="communication-record-btn-options">
    <button id="communication-record-btn-edit" type="button" class="btn btn-warning current" data-current-communication-id="{{communication.id}}" data-current-company-id="{{communication.company_ref_id}}" data-current-job-id="{{communication.job_ref_id}}" data-current-document-id="{{communication.document_ref_id}}">Edit Communication Record</button>
    <button id="communication-record-delete" type="button" class="btn btn-danger current" data-current-communication-id="{{communication.id}}">Delete Communication Record</button>
  </div>
</div>

<div class="dashboard-container">
  <button id="dashboard-home-btn" type="button" class="btn btn-primary dashboard-home-btn-communication-page">View Dashboard</button>
  <button id="dashboard-new-job-btn-communication" type="button" class="btn btn-success dashboard-home-btn-communication-page" data-current-communication-id="{{communication.id}}" data-type-communication-page="{{communication.communication_page}}">Create Job</button>
</div>

<div class="filter-show-job-container"></div>
