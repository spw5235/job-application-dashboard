<div class="row">
  <div class="col-sm-4 col-sm-offset-1 col-xs-12 col-xs-offset-0">
    <h1>Job Details</h1>
  </div>
  <div class="col-sm-5 col-xs-12 col-xs-offset-0">
    <h1>Status: {{#if job.applied}}<span class="green">Applied</span>{{else}}<span class="red">Incomplete</span>{{/if}}</h1>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-xs-offset-0 col-sm-9">
    <table class="table job-record-table">
      <tbody>
        <tr>
          <td class="job-record-company-name">
            Company Name:
          </td>
          <td>
            {{job.company_name}}
          </td>
        </tr>
        <tr>
          <td class="job-record-title">
            Job Title:
          </td>
          <td>
            {{job.title}}
          </td>
        </tr>
        <tr>
          <td>Application Priority</td>
          <td>{{job.priority_num}}</td>
        </tr>
        {{#if job.applied}}
          <tr>
            <td>Application Submission Date</td>
            <td>{{job.date_applied}}</td>
          </tr>
        {{/if}}

        <tr>
          <tr>
            <td>
              Deadline:
            </td>
            <td class="format-date">
              {{job.deadline}}
            </td>
          </tr>
          <tr>
            <td>
              Salary:
            </td>
            <td>
              {{job.salary}}
            </td>
          </tr>
          <tr>
            <td>
              Posting Date
            </td>
            <td class="format-date">
              {{job.posting_date}}
            </td>
          </tr>
          <tr>
            <td>
              Job Post Url
            </td>
            <td>
              <p class="display-empty-p"></p>
              <a class="display-url" href="{{job.post_url}}" target="_blank"></a>
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <p class="underline">Job Description</p>
              <p class="maintain-spacing">{{job.job_description}}</p>
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <p class="underline">Responsibilities</p>
              <p class="maintain-spacing">{{job.responsibility}}</p>
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <p class="underline">Requirements</p>
              <p class="maintain-spacing">{{job.requirement}}</p>
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <p class="underline">Notes</p>
              <p class="maintain-spacing">{{job.note}}</p>
            </td>
          </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-xs-offset-0 col-sm-9">
    <div class="job-record-btn-options center">
      <button type="button" class="btn btn-default current get-jobs-back-btn">Back</button>
      <button id="job-record-btn-edit" type="button" class="btn btn-warning current" data-current-job-id="{{job.id}}" data-current-company-id="{{job.company_ref_id}}" data-current-job-id="{{job.job_ref_id}}" data-current-document-id="{{job.document_ref_id}}">Edit Job Record</button>
      <button id="job-record-delete-menu" type="button" class="btn btn-danger current" data-current-job-id="{{job.id}}">Delete Job Record</button>
      <br><br>
    </div>
    <div class="delete-confirmation-contain">
      <div class="form-group delete-confirmation">
        <h3><span class="red-color">Warning: </span>Deleting this job record will also remove all linked records (e.g. linked contacts, linked reminders, etc.). Would you like to continue?</h3>
        <!-- <p>Deleting this job record will also remove all linked records (e.g. linked contacts, linked reminders, etc.)</p> -->
        <button id="job-record-delete" type="button" class="btn btn-danger current" data-current-job-id="{{job.id}}">Delete All</button>
        <button id="job-delete-cancel" type="button" class="btn btn-primary current" data-current-job-id="{{job.id}}">Cancel</button>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-sm-6">
    <div class="reminders-summary-table-container"></div>
    <div class="reminders-empty-message"></div>
  </div>
  <div class="col-xs-12 col-sm-6">
    <div class="communications-summary-table-container"></div>
    <div class="communications-empty-message"></div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-6">
    <div class="contacts-summary-table-container"></div>
    <div class="contacts-empty-message"></div>
  </div>
  <div class="col-xs-12 col-sm-6">
    <div class="documents-summary-table-container"></div>
    <div class="documents-empty-message"></div>
  </div>
</div>
