<div class="communication-page group-category">

<h1>Communication Dashboard</h1>

<table class="table communication-summary-table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Communication Method</th>
      <th>Communication Subject</th>
      <th>View Record</th>
    </tr>
  </thead>
  <tbody>
    {{#each communications as |communication|}}
      <tr>
        <td class="display-communication-full-name">
          {{communication.c_date}}
        </td>
        <td class="display-communication-company-name">
          {{communication.c_method}}
        </td>
        <td class="display-communication-email">
          {{communication.c_subject}}
        </td>
        <td class="display-communication-submit">
          <button type="button" class="btn btn-info btn-sm dashboard-communication-record-btn" data-current-communication-id="{{communication.id}}" data-current-company-id="{{communication.company_ref_id}}" data-current-job-id="{{communication.job_ref_id}}" data-current-document-id="{{communication.document_ref_id}}">View Communication</button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
<br>
<div class="dashboard-container">
  <button id="generate-create-communication-btn" type="button" class="btn btn-success">Create Communication</button>
</div>
</div>
