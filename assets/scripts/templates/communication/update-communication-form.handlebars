<div class="update-communication-form-container form-container communication-page group-category">
  <form class="form communication-form reminder-form" id="update-communication-form" name="update-communication-form" data-update-form="1">
    <fieldset>
      <legend>Update Communication Form</legend>
      <p id="update-communication-error" class="warning form-error"></p>
      <p>All fields are <u>optional</u> unless otherwise indicated</p>

      <div class="form-group">
        <label>Communication Date</label>
        <input class="form-control required-field communication-date" name="communication[c_date]" value="{{communication.c_date}}" placeholder="Communication Date" type="date">
      </div>

      <div class="form-group c-method">
        <label>Communication Method (required)</label>
        <select class="form-control" id="communication-method-select" data-current-c-method="{{communication.c_method}}">
            <option class="form-control required-field" name="communication[c_method]" placeholder="Communication Method" type="text" value="Email">Email</option>
            <option class="form-control required-field" name="communication[c_method]" placeholder="Communication Method" type="text" value="Phone">Phone</option>
            <option class="form-control required-field" name="communication[c_method]" placeholder="Communication Method" type="text" value="Linkedin">LinkedIn</option>
            <option class="form-control required-field" name="communication[c_method]" placeholder="Communication Method" type="text" value="Meeting">Meeting</option>
            <option class="form-control required-field" name="communication[c_method]" placeholder="Communication Method" type="text" value="Other">Other</option>
        </select>
      </div>

      <div class="form-group">
        <label>Communication Subject (required)</label>
        <input class="form-control required-field communication-subject" name="communication[c_subject]" value="{{communication.c_subject}}" placeholder="Communication Subject" type="text">
      </div>

      <div class="form-group">
        <label>Communication Details</label>
        <textarea id="communication-details-input" class="form-control field-input communication-details" name="communication[c_details]" placeholder="Communication Details">{{communication.c_details}}</textarea>
      </div>

      <div class="form-group">
        <label>Communication Link</label>
        <input class="form-control required-field" name="communication[c_link]" placeholder="Communication Link" type="text" value="{{communication.c_link}}">
      </div>

      <div class="form-group">
        <label>Communication Notes</label>
        <textarea id="communication-notes-input" class="form-control field-input communication-notes" name="communication[c_notes]" placeholder="Communication Notes">{{communication.c_notes}}</textarea>
      </div>

      <div class="form-group job-radio-container current-value-update-page">
        <label>Current Company Association:</label>
        <div class="update-radio-link-value-status-container">
          <p>The company currently associated with this communication is: <span class="job-update-radio-text">{{communication.job_ref_text}}</span></p>
          <p>Link Status: <span class="job-tag-status" data-current-ref-id="{{communication.job_ref_id}}">Not Linked</span></p>
        </div>
      </div>

      <div>
        <div class="job-update-link-container form-group">
          <label>Would you like to update the communication's company?</label>
          <div class="form-group">
            <span>Check Box for Yes</span>
            <input id="job-update-link" type="checkbox" value="">
          </div>
        </div>
        <div class="form-group job-radio-container update-radio-container-btn">
          <label>Will this updated company be tagged to the communication?</label>
          <label><input id="job-radio-yes" class="job-category" type="radio" name="job-radio" value="1">Yes</label>
          <label><input id="job-radio-no" class="job-category" type="radio" name="job-radio" value="0">No</label>
        </div>
      </div>

      <div class="form-group display-alt-job"></div>
      <div class="form-group display-dropdown-job"></div>

      <div class="form-group">
        <input class="btn btn-success submit-btn current" name="submit" id="submit-communication-update-btn" type="submit" value="Submit" data-current-ref-id="{{communication.job_ref_id}}" data-current-ref-text="{{communication.job_ref_text}}">
      </div>
    </fieldset>
  </form>
</div>
