<div class="communication-page group-category">
<h1>Secondary Table Communication</h1>

<table class="table secondary-table table-hover">
  <thead>
    <tr>
      <th>Contact Name</th>
      <th>View Record</th>
    </tr>
  </thead>
  <tbody>
    {{#each communications as |communication|}}
      <tr>
        <td class="display-communication-full-name">
          {{communication.contact_ref_name}}
        </td>
        <td class="display-communication-submit">
          <button type="button" class="btn btn-info btn-sm view-secondary-btn" data-secondary-data-contact-category="{{communication.contact_ref_id}}" data-current-communication-id="{{communication.id}}" data-current-company-id="{{communication.company_ref_id}}" data-current-job-id="{{communication.job_ref_id}}" data-current-document-id="{{communication.document_ref_id}}">View Communication</button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
<br><br>
</div>
