<h1>Contact Overview</h1>

<h2 class="contact-name-header" data-current-contact-name="{{contact.id}}">{{contact.full_name}}</h2>

<h3>Contact Details</h3>
<table class="table contact-record-table table-hover">
  <tbody>
    <tr>
      <td class="contact-record-first-name">
        Contact First Name:
      </td>
      <td class="display-contact-first-name">
        {{contact.first_name}}
      </td>
    </tr>
    <tr>
      <td class="contact-record-last-name">
        Contact Last Name:
      </td>
      <td class="display-contact-last-name">
        {{contact.last_name}}
      </td>
    </tr>
    <tr>
      <td class="company-name">
        Contact Company Name:
      </td>
      <td class="display-contact-company-name">
        {{contact.company_name}}
      </td>
    </tr>
    <tr>
      <td class="contact-job-title">
        Job Title:
      </td>
      <td class="display-contact-job-title">
        {{contact.job_title}}
      </td>
    </tr>
    <tr>
      <td class="contact-record-email">
        Contact Email:
      </td>
      <td class="display-contact-email">
        {{contact.email}}
      </td>
    </tr>
    <tr>
      <td class="contact-record-phone">
        Contact Phone:
      </td>
      <td class="display-contact-phone">
        {{contact.phone}}
      </td>
    </tr>
    <tr>
      <td class="contact-record-website">
        Contact Website:
      </td>
      <td class="display-contact-note">
        {{contact.website}}
      </td>
    </tr>
    <tr>
      <td colspan="2"class="contact-record-title contact-record-note">
        Contact Notes:
      </td>
      <td colspan="2"class="display-contact-notes">
        {{contact.notes}}
      </td>
    </tr>
  </tbody>
</table>

<div class="dashboard-contact-btn-container">
  <div class="contact-record-btn-options">
    <button id="contact-record-btn-edit" type="button" class="btn btn-warning current" data-current-contact-id="{{contact.id}}" data-current-company-id="{{contact.company_ref_id}}" data-current-job-id="{{contact.job_ref_id}}" data-current-document-id="{{contact.document_ref_id}}">Edit Contact Record</button>
    <button id="contact-record-delete" type="button" class="btn btn-danger current" data-current-contact-id="{{contact.id}}">Delete Contact Record</button>
  </div>
</div>

<div class="dashboard-container">
  <button id="dashboard-home-btn" type="button" class="btn btn-primary dashboard-home-btn-contact-page">View Dashboard</button>
  <button id="dashboard-new-job-btn-contact" type="button" class="btn btn-success dashboard-home-btn-contact-page" data-current-contact-id="{{contact.id}}" data-type-contact-page="{{contact.contact_page}}">Create Job</button>
</div>

<div class="filter-show-job-container"></div>
