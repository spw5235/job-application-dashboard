<h3>Pending Job Priority</h3>

<table class="table job-summary-table table-hover">
  <thead>
    <tr>
      <th>Company Name</th>
      <th class="hidden-xs">Job Title</th>
      <th>Applied?</th>
      <th class="hidden-xs">Job Priority</th>
      <th>View Record</th>
    </tr>
  </thead>
  <tbody>
    {{#each jobs as |job|}}
      <tr>
        <td class="display-company-name">
          {{job.company_name}}
        </td>
        <td class="display-job-title hidden-xs">
          {{job.title}}
        </td>
        <td>
          {{#if job.applied}}
            Yes
          {{else}}
            No
          {{/if}}
        </td>
        <td class="hidden-xs">
          {{job.priority_num}}
        </td>
        <td>
          <button type="button" class="btn btn-default btn-sm dashboard-job-record-btn" data-current-job-id="{{job.id}}">View Job</button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
