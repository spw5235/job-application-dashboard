<h1>Status Dashboard</h1>

<table class="table status-summary-table table-hover">
  <thead>
    <tr>
      <th>Status Type</th>
      <th>Status Subject</th>
      <th>Notification Date</th>
      <th>View Record</th>
    </tr>
  </thead>
  <tbody>
    {{#each statuses as |status|}}
      <tr>
        <td class="display-status-name">
          {{status.status_type}}
        </td>
        <td class="display-status-location">
          {{status.subject}}
        </td>
        <td class="display-status-url">
          {{status.due_date}}
        </td>
        <td class="display-status-submit">
          <button type="button" class="btn btn-info btn-sm status-record-btn" data-current-reminder-id="{{status.id}}">View status</button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
<br><br>
<div class="dashboard-container">
  <button id="dashboard-new-job-btn" type="button" class="btn btn-success" data-type-status-page="false">Create Job</button>
</div>
