<div class="update-company-form-container form-container">
<form class="form company-form" id="update-company-form" name="update-company-form">
  <fieldset>
    <legend>Update Company Form</legend>
    <p id="update-company-error" class="warning form-error"></p>
    <p>All fields are <u>optional</u> unless otherwise indicated</p>

    <div class="form-group">
      <label>Company Name (required)</label>
      <input class="form-control required-field" name="company[name]" placeholder="Company Name" type="text" value="{{company.name}}">
    </div>

    <div class="form-group">
      <label>Location/Address</label>
      <input class="form-control required-field" name="company[location]" placeholder="Location" type="text" value="{{company.location}}">
    </div>

    <div class="form-group">
      <label>Company Website (url)</label>
      <input class="form-control" name="company[url]" placeholder="url" type="text" value="{{company.url}}">
    </div>

    <div class="form-group">
      <label>Company Notes</label>
      <textarea class="form-control field-input note-input" name="company[note]" placeholder="Company Notes"></textarea>
    </div>

    <div class="form-group">
      <input class="btn btn-success submit-btn current" name="submit" id="submit-company-update-btn" type="submit" value="Submit">
    </div>
  </fieldset>
</form>
<br><br>
<div class="dashboard-container">
  <button id="dashboard-home-btn" type="button" class="btn btn-primary">View Dashboard</button>
  <button id="dashboard-new-job-btn" type="button" class="btn btn-success">Create Session</button>
</div>
</div>
